            <!-- 设置资源文件的编码方式 -->
            <!-- xml、properties文件都是资源文件，编码的时候遇到中文总要进行转码 -->
            <!--plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
