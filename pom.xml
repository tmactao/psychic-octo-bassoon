    <build>
        <plugins>
            <!-- 编译插件 -->
            <!-- source： 	源代码编译版本；
               target： 	目标平台编译版本；
               encoding： 	字符集编码。   -->
            <!--plugin>
                <groupId>org.apache.maven.plugins</groupId>
